<% provide(:title, 'タスク編集') %>
<div class="new-container">
  <div class="container container-padding">
    <div class="sessionBox">
      <h1 class="form-title-edit signup-title">タスク編集</h1>
      <%= form_with(model: @post, url: post_path, local: true) do |form| %>
        <%= render 'shared/error_messages', object: form.object %>
        <div class="form-group-edit checkbox-edit">
          <%= form.check_box :complete, class: 'form-check-input', :as => :boolean%>
          <% if @post.complete == false %>
            <%= form.label :complete, 'このタスクを完了にしますか？' %>
          <% else %>
            <%= form.label :complete, 'チェックを外してこのタスクを未完了に戻しますか？' %>
          <% end %>
        </div>
        <div class="form-group-edit">
          <%= form.label :content, 'タスク名' %>
          <%= form.text_field :content, class: 'form-control', placeholder: @post.content %>
        </div>
        <div class="form-group-edit text-edit">
          <%= form.label :text, '内容' %>
          <%= form.text_area :text, class: 'form-control', placeholder: @post.text %>
        </div>
        <div class="form-group edit-picture">
          <%= form.label :picture, '画像' %>
          <%= form.file_field :picture, class: 'form-control-file' %>
        </div>
        <div class="row button-margin-bottom">
          <div class="col button-margin-left">
            <div class="form-group edit-button">
              <%= link_to "削除", post_path, method: :delete, data: { confirm: "本当に削除しますか？" }, class: 'btn btn-lg btn-danger btn-edit-user' %>
            </div>
          </div>
          <div class="col button-margin-right">
            <div class="form-group edit-button">
              <%= form.submit "完了", class: 'btn btn-info btn-lg btn-edit-user' %>
            </div>
          </div>
        </div>
        <div class="form-group edit-button">
          <%= link_to "戻る", current_user, class: 'btn btn-success btn-edit-user btn-back' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
