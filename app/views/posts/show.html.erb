<% provide(:title, @post.content) %>
<div class="new-container">
  <div class="container container-padding">
    <div class="sessionBox">
      <h1 class="form-title-edit signup-title">タスク</h1>
      <div class="form-group-edit">
        <label class="show-task-label">作成ユーザー</label>
        <p class="show-task-user"><%= @user.name %></p>
      </div>
      <div class="form-group-edit">
        <label class="show-task-label">タスク名</label>
        <% if @post.content.present? %>
          <p class="show-task-content"><%= @post.content %></p>
        <% else %>
          <p class="show-task-content">タスク名なし</p>
        <% end %>
      </div>
      <div class="form-group-edit text-edit">
        <label class="show-task-label">内容</label>
        <% if @post.text.present? %>
          <p class="show-task-text"><%= @post.text %></p>
        <% else %>
          <p class="show-task-text">タスク内容なし</p>
        <% end %>
      </div>
      <div class="form-group edit-picture">
        <% if @post.picture.attached? %>
          <div class="log-picture show-task-picture">
            <%= image_tag @post.resize_picture_show %>
          </div>
        <% end %>
      </div>
      <div class="row button-margin-bottom">
        <div class="col button-margin-left">
          <div class="form-group edit-button">
            <%= link_to "戻る", task_path(current_user), class: 'btn btn-lg btn-success btn-edit-user' %>
          </div>
        </div>
        <% if current_user?(@user) %>
          <div class="col button-margin-right">
            <div class="form-group edit-button">
              <%= link_to "編集する", edit_post_path(@post.id), class: 'btn btn-info btn-lg btn-edit-user' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
