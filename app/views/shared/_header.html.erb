<!-- HEADER -->
<div class="header clearfix">
  <!-- TOPBAR -->
  <div class="topBar">
    <div class="container">
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="topBer-left">
          <% if logged_in? %>
            <%= link_to image_tag("/logo.png"), user_path(current_user) %>
          <% else %>
            <%= link_to image_tag("/logo.png"), root_path %>
          <% end %>
        </div>
        <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse justify-content-end align-items-center collapse show" id="navbarToggleDemo01">
          <ul class="navbar-nav mt-2 mt-lg-0 header-font">
            <% if logged_in? %>
              <li class="nav-item active">
                <i class="fas fa-address-card"></i>
                <%= link_to "プロフィール", profile_path(current_user), class: "topBer-nav-link profile-button" %>
              </li>
              <li class="nav-item">
                <i class="fas fa-sign-out-alt"></i>
                <%= link_to "ログアウト", logout_path, method: :delete, class: "topBer-nav-link logout-button" %>
              </li>
            <% else %>
              <li class="nav-item active">
                <i class="fas fa-user-edit"></i>
                <%= link_to "ユーザー登録", signup_path, class: "topBer-nav-link create-button" %>
              </li>
              <li class="nav-item">
                <i class="fas fa-sign-in-alt"></i>
                <%= link_to "ログイン", login_path, class: "topBer-nav-link login-button" %>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>
    </div>
  </div>
</div>
