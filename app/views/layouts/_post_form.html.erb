<div class="container show-post-container">
  <h1>Form</h1>
  <%= form_with(model: @post, url: posts_path, local: true) do |form| %>
    <%= render 'shared/error_messages', object: form.object %>
    <div class="form-group form-group-post">
      <%= form.text_field :content, class: 'form-control', placeholder: "タスクを入力しよう" %>
    </div>
    <div class="form-group form-group-post">
      <%= form.text_area :text, class: 'form-control', placeholder: "内容を入力しよう" %>
    </div>
    <div class="form-group form-group-post form-group-picture">
      <%= form.file_field :picture %>
    </div>
    <div class="form-group form-group-post">
      <%= form.submit "完了", class: 'btn btn-success btn-lg form-submit' %>
    </div>
  <% end %>
</div>
