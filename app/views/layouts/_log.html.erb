<% if @user.posts.any? %>
  <div class="user-logs-box">
    <ol class="user-posts">
    <% @posts.each do |post| %>
      <li id ="post-<%= post.id %>">
        <span class="row log-list">
          <span class="col-2 log-timestamp d-none d-md-inline-block log-timestamp-block">
            <span class="log-timestamp"><%= time_ago_in_words(post.created_at) %>前</span>
          </span>
          <span class="col-md-10 col-log-memos">
            <div class="log-time-and-edit">
              <div class="row">
                <span class="log-time col-3"></span>
                <span class="col-7 log-timestamp log-timestamp-inline"><%= time_ago_in_words(post.created_at) %>前</span>
              </div>
            </div>
            <span class="log-memo"><%= post.text %></span>
            <% if post.picture.attached? %>
              <div class="log-picture">
                <%= image_tag post.resize_picture %>
              </div>
            <% end %>
          </span>
        </span>
      </li>
    <% end %>
    </ol>
  </div>
  <div class="pagination-box">
    <%= paginate @posts %>
  </div>
<% else %>
  <span>まだ投稿がありません</span>
<% end %>
